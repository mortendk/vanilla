{# Hero and navigation #}
{% if is_front %}
<div class="hero-front" id="top">
  <h1 class="shady">Drupal 8 is pretty sweeeeeeet </h1>
   <a href="#mainmenu">Go!</a>
</div>
{% endif %}

<header role="banner" class="hero-nav " id="mainmenu">
  {# @TODO: this can be done way better  #}
  <div class="header-first">
    {{ page.logo }}
  </div>
  <div class="header-last">
  {{ page.header }}
  </div>

</header>

<main role="main">
  <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

  {{ page.message }}

  {{ page.content }}

  {% if page.sidebar_first %}
    <aside class="" role="complementary">
      {{ page.sidebar_first }}
    </aside>
  {% endif %}

  {% if page.sidebar_second %}
    <aside class="" role="complementary">
      {{ page.sidebar_second }}
    </aside>
  {% endif %}

</main>

{% if page.footer %}
  <footer role="contentinfo">
    {{ page.footer }}
  </footer>
{% endif %}
