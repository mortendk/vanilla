{# we dont really need this but for funzies lets keep it #}
{% if attributes !="" -%}
  <div{{ attributes }}>
{% endif %}

  {% if title %}
    <h3>{{ title }}</h3>
  {% endif %}

  {#
    oki then why a user wants to change this is
    this is theming     not a config thing
    @TODO:  list.attributes.addClass('tiles') dont  work ? ... or am i an idiot
  #}
  <{{ list.type }} class="layout layout--tiles  pagewidth">

    {# for loop #}
    {% for row in rows %}
      {# first #}
      {% if loop.first %}
        <li{{ row.attributes.addClass('width-half', 'width-full@s') }}>{{ row.content }}</li>
      {% elseif (loop.index == "2") %}
        {# put in a li that we close at 5th loop #}
        <li class="width-half width-full@s layout">
        <div {{ row.attributes.addClass('width-half', 'width-half@s') }}>{{ row.content }}</div>
      {% elseif (loop.index >= "3") and (loop.index <= "5") %}
          <div {{ row.attributes.addClass('width-half', 'width-half@s') }}>{{ row.content }}</div>
      {% elseif (loop.index == "5") %}
        {# closing li #}
        </li>
      {% elseif (loop.index >= "9") and (loop.index <= "10") %}
        <li{{ row.attributes.addClass('width-half') }}>{{ row.content }}</li>
      {% else %}
      {# default #}
        <li{{ row.attributes.addClass('width-third') }}>{{ row.content }}</li>
      {% endif %}
    {% endfor %}


  </{{ list.type }}>

{# we dont really need this but for funzies lets keep it #}
{% if attributes !="" -%}
  </div>
{% endif %}
