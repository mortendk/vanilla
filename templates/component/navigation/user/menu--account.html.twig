{% macro menu_links(items, attributes, menu_level, logged_in) %}
  {% import _self as menus %}
  {% if items %}
    {# 0 level item sets to an ul  #}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('L-right') }}>
      {# ok user links is a pita to do whatever we wanna do so lets hardcode it ;)    #}
      {% if logged_in %}
        <li>
          <a href="/user" title=" {{ 'user'|t }} ">
          <span class="iconsvg iconsvg--m">
            {% include active_theme_path() ~ '/templates/component/navigation/user/icon/user.svg' %}
          </span>
          </a>
        </li>
        <li>
          <a href="/user/logout" title=" {{ 'user'|t }} ">
            <span class="iconsvg iconsvg--m">
              {% include active_theme_path() ~ '/templates/component/navigation/user/icon/exit.svg' %}
            </span>
          </a>
        </li>

      {% else %}

        <li>
          <a href="/user/login" title=" {{ 'Login'|t }} ">
          <span class="iconsvg iconsvg--m">
            {% include active_theme_path() ~ '/templates/component/navigation/user/icon/lock.svg' %}
          </span>
          </a>
        </li>
      {% endif %}
      {# logged_in #}

    {% else %}
      <ul>
    {% endif %}
    {% for item in items %}
      {# print out each menu item #}
      <li{{ item.attributes.addClass(item.title|clean_class) }}>
      {#  grap the title description and split it out based on |
        pattern: title text | icon
      #}

      {% set description = item.original_link.getDescription()|split(' | ') %}
      {% set linktitle = description.0 %}
      {% set svgicon = description.1 %}

        <a href="{{ item.url }}" title="{{ item.title }} - {{ linktitle }}">
          {# include a variable use ~ to add in the name not {{ foo }} #}
          {% if svgicon %}
            <span class="iconsvg iconsvg--m">
            {% include active_theme_path() ~ '/templates/component/navigation/user/icon/' ~ svgicon ~ '.svg' %}
            </span>
          {% else %}
            {{ item.title }}
          {% endif %}
        </a>

        {# Here we go call the macro if items further down #}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}

      </li>

    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
