{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}


{%
  set remove_classes = [
  'form-search'
  ]
%}


{%
  set placeholder = [
  'search'|t
  ]
%}

<input{{ attributes.removeClass(remove_classes).removeAttribute('size').setAttribute('placeholder', placeholder)  }} />{{ children }}
